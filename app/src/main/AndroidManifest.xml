<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adminsurfacetech.my_learn_hub">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Settinglayout"></activity>
        <activity
            android:name=".Activity.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/DayMode" />
        <activity android:name=".Activity.post" />
        <activity android:name=".Activity.Luncherctivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.IntroActivity" />
        <activity
            android:name=".Activity.Sign_upActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.activity_home"
            android:theme="@style/AppTheme.Base" />
        <activity android:name=".Activity.ForgotActivity" />
        <activity
            android:name=".Activity.Settings"
            android:parentActivityName=".Activity.Home" />
        <activity android:name=".Activity.Playing" />
        <activity android:name=".Activity.Done" />
        <activity
            android:name=".Activity.Start"
            android:theme="@style/DayMode" />
        <activity
            android:name=".Activity.PostDetailActivity"
            android:theme="@style/DayMode" />
        <activity
            android:name=".Activity.ScoreDetail"
            android:theme="@style/DayMode" />
    </application>

</manifest>